{
  "name": "nani",
  "version": "2.2.0",
  "description": "Better error handling for Node",
  "author": "Steve Ripberger",
  "license": "MIT",
  "repository": "github:sripberger/nani",
  "keywords": [
    "error",
    "verror"
  ],
  "scripts": {
    "lint": "eslint .",
    "unit": "mocha -r esm test/setup.js test/unit",
    "integration": "mocha -r esm test/setup.js test/integration",
    "test": "npm run lint && npm run unit && npm run integration",
    "docs": "documentation build ./lib/index.js -c docs.yaml -f html -o docs",
    "postversion": "npm run docs && gh-pages -d docs && git push && git push --tags"
  },
  "main": "cjs",
  "dependencies": {
    "esm": "^3.2.7",
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "@sripberger/eslint-config": "^1.0.3",
    "chai": "^4.2.0",
    "documentation": "^9.3.0",
    "eslint": "^5.14.1",
    "eslint-plugin-jsdoc": "^4.1.1",
    "gh-pages": "^2.0.1",
    "mocha": "^6.0.2",
    "sinon": "^7.2.5",
    "sinon-chai": "^3.3.0"
  }
}
