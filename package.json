{
	"name": "nani",
	"version": "2.3.1",
	"description": "Better error handling for Node",
	"author": "Steve Ripberger",
	"license": "MIT",
	"repository": "github:sripberger/nani",
	"keywords": [
		"error",
		"verror"
	],
	"files": [
		"dist/lib",
		"dist/types"
	],
	"scripts": {
		"generate": "yo",
		"generate:class": "yo @batterii/ts-class",
		"generate:module": "yo @batterii/ts-module",
		"generate:test": "yo @batterii/ts-test",
		"lint": "eslint . --ext .ts",
		"lintf": "eslint . --ext .ts --fix",
		"prebuild": "rm -rf dist",
		"build": "tsc && tsc --project tsconfig-types.json",
		"test": "mocha",
		"test:unit": "mocha test/unit",
		"test:integration": "mocha test/integration",
		"test:build": "npm run build && mocha --config .mocharc-dist.yaml dist/test",
		"preversion": "npm run lint && npm run test:build",
		"prepublishOnly": "git push && git push --tags"
	},
	"main": "dist/lib/index.js",
	"types": "dist/types/index.d.ts",
	"devDependencies": {
		"@batterii/eslint-config-ts": "^1.1.0",
		"@batterii/generator-ts-class": "^0.1.0",
		"@batterii/generator-ts-module": "^0.1.0",
		"@batterii/generator-ts-test": "^0.1.0",
		"@types/chai": "^4.1.7",
		"@types/lodash": "^4.14.136",
		"@types/mocha": "^5.2.7",
		"@types/node": "^10.14.12",
		"@types/sinon": "^7.0.13",
		"@types/sinon-chai": "^3.2.2",
		"@typescript-eslint/eslint-plugin": "^1.11.0",
		"@typescript-eslint/parser": "^1.11.0",
		"chai": "^4.2.0",
		"eslint": "^5.16.0",
		"mocha": "^6.1.4",
		"sinon": "^7.3.2",
		"sinon-chai": "^3.3.0",
		"source-map-support": "^0.5.12",
		"ts-node": "^8.3.0",
		"typescript": "3.4.5",
		"yo": "^2.0.6"
	},
	"dependencies": {
		"lodash": "^4.17.14"
	}
}
